<section class="hero_single version_1">
	<div class="wrapper">
		<div class="container">
			<h3>Mọi thứ ở đây đều thật tuyệt vời!</h3>
			<p>Tìm kiếm nhà hàng mà bạn mong muốn</p>
			<div class="row justify-content-center">
				<div class="col-lg-9">
					<form method="get" action="<%= restaurant_index_path %>">
						<div class="row no-gutters custom-search-input-2">
							<div class="col-lg-9">
								<div class="form-group">
									<input name="name" class="form-control" type="text" placeholder="Bạn đang muốn tìm ..." >
									<i class="fas fa-search"></i>
								</div>
							</div>
							<div class="col-lg-3">
								<input type="submit" value="Tìm kiếm">
							</div>
						</div>
						<!-- /row -->
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="container margin_60_35">
	<div class="main_title_3">
		<h2>Nhà hàng được đánh giá cao nhất</h2>
		<hr>
		<%= link_to "Xem tất cả", restaurant_index_path %>
	</div>
	<div class="row justify-content-center">
		<% @best_res.each do |r| %>
		<div class="col-lg-4 col-sm-6">
			<%= link_to restaurant_path(r), class: "grid_item" do %>
				<figure>
					<!-- <img src="assets/img/box_cat_home_1.jpg" alt=""> -->
          			<img src="<%= r.res_images.first().image %>" alt="">

					<div class="info">
						<small><i class="fas fa-comment"></i> <%= r.comments.count %> Reviews</small>
						<span class="rating">
							<% (1..5).each do |i| %>
								<% if i <= r.vote_num %>
								<i class="fas fa-star"></i>
								<% elsif (i - r.vote_num) <1 %>
								<i class="fas fa-star-half-alt"></i>
								<% else %>
								<i class="far fa-star"></i>
								<% end %>
							<% end %>
							<span class="text-white"><%= r.vote_num %>/5.0</span>
						</span>
						<h3><%= r.name %></h3>
					</div>
				</figure>
			<% end %>
		</div>
		<% end %>
		<!-- /grid_item -->
	</div>
	<!-- /row -->
</div>
<!-- /container -->

