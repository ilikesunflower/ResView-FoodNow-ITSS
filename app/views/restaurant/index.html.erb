<main>
  <div class="container margin_80">

    <section class="hero_single version_1_1">
    <div class="wrapper">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-9">
              <form method="get" action="<%= restaurant_index_path %>">
                <div class="row no-gutters custom-search-input-2">
                  <div class="col-lg-9">
                    <div class="form-group">
                      <input name="name" class="form-control" type="text" placeholder="Bạn đang muốn tìm ..." >
                      <i class="fas fa-search"></i>
                    </div>
                  </div>
                  <div class="col-lg-3">
                    <input type="submit" value="Tìm kiếm">
                  </div>
                </div>
                <!-- /row -->
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="isotope-wrapper py-3">
      <% $count = 0 %>
      <% @all_res.each do |r| %>
      <% if $count < 10 %>
      <div class="company_listing isotope-item high" style="width: 100%">
        <div class="row">
          <div class="col-md-9">
            <div class="company_info">
              <figure>
                <a href="<%= restaurant_path(r) %>">
                  <!-- <img src="img/brands/1.png" alt=""> -->
                  <img src="<%= r.res_images.first().image %>" alt="">
                </a>
              </figure>
              <h3><%= r.name %></h3>
              <p>Địa chỉ: <%= r.address %></p>
              <p>Số điện thoại: <%= r.phone %></p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="text-center float-lg-right">
              <span class="rating">
                <strong><%= r.comments.count %> comments <%= r.vote_num %>/5.0</strong>
                <% (1..5).each do |i| %>
                  <% if i <= r.vote_num %>
                  <i class="fas fa-star"></i>
                  <% elsif (i - r.vote_num) <1 %>
                  <i class="fas fa-star-half-alt"></i>
                  <% else %>
                  <i class="far fa-star"></i>
                  <% end %>
                <% end %>
              </span>
              <%= link_to  "Xem thêm", restaurant_path(r), class: "btn_1 small" %>
            </div>
          </div>
        </div>
      </div>
      <% $count+=1 %>
      <% end %>
      <!-- /company_listing -->
      <% end %>
    </div>
    <!-- /isotope-wrapper -->

    <p class="text-center"><a href="#0" class="btn_1 rounded add_top_15">Xem thêm</a></p>

  </div>

</main>
